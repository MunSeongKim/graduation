<body>
<div id="search">
<div class="col-xs-12">
<form class="form-inline" action="/result" method="post">
<div class="form-group">
<div class="input-group form-group-lg">
<span class="input-group-addon" id="menu-toggle"><i class="fa fa-bars" aria-hidden="true"></i></span>
<input id="key" type="text" class="form-control" name="key" placeholder="도 이름으로 검색합니다." value="<%= @key%>" autofocus required />
<span class="input-group-btn">
<!-- 제출 버튼! -->
<button class="btn btn-info form-control" type="submit">
<span class="glyphicon glyphicon-search" aria-hidden="true"></span>
</button>
</span>
</div>
</div>
</form>
</div>
</div>

<div id="wrapper">
<!-- Sidebar -->
<div id="sidebar-wrapper">
<ul class="sidebar-nav list-group">
<% @result.each do |row| %>
<li class="list-group-item">
<a href="<%= row.url%>" target="_blank">
<h4 class="list-group-item-heading"><%= row.title%> - <small><i class="fa fa-clock-o" aria-hidden="true"></i> <%= row.date%></small></h4>
<p class="list-group-item-text"><%= row.desc[0...60]%>...</p>
</a>
</li>
<% end %>
</ul>
</div>
<!-- /#sidebar-wrapper -->

<!-- Page Content -->
<div id="page-content-wrapper">
<div class="container-fluid">
<div class="row">
<div class="col-lg-12">
</div>
</div>
</div>
</div>
<!-- /#page-content-wrapper -->
</div>

